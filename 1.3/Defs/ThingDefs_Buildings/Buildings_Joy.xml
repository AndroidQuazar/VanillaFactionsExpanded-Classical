<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>VFEC_Thermaebath</defName>
		<label>thermaebath</label>
		<description>A very large, heated stone bath meant to be shared by several patrons. Provides a temporary respite from an otherwise discomforting world. When in high numbers, bathers are known to lose themselves in the moment and share more than they normally would.</description>
		<thingClass>VFEC.Buildings.Thermaebath</thingClass>
		<graphicData>
			<texPath>Things/Building/Joy/Thermaebath/Thermaebath</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(4,4)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>250</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<passability>Standable</passability>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<pathCost>200</pathCost>
		<statBases>
			<Mass>500</Mass>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<Beauty>30</Beauty>
			<JoyGainFactor>3</JoyGainFactor>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(4,4)</size>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Joy</designationCategory>
		<placeWorkers>
			<li>PlaceWorker_OnSteamGeyser</li>
		</placeWorkers>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<soundAmbient>GeothermalPlant_Ambience</soundAmbient>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
			<joyKind>VFEC_Relaxing_Bath</joyKind>
		</building>
		<comps>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>16</heatPerSecond>
				<heatPushMaxTemperature>30</heatPushMaxTemperature>
			</li>
		</comps>
		<researchPrerequisites>
			<li>VFEC_Thermaebath</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>VFEC_TheatreStage</defName>
		<label>theatre stage</label>
		<description>A lightly decorated wooden stage meant to provide area for props and actors both to create compelling scenes. Such performances are quite fun for both those on stage and those casting their eyes upon it.</description>
		<thingClass>VFEC.Buildings.Stage</thingClass>
		<graphicData>
			<texPath>Things/Building/Joy/TheatreStage/TheatreStage</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shadowData>
				<volume>(2.5, 0.6, 0.1)</volume>
				<offset>(0, 0, 0.2)</offset>
			</shadowData>
			<drawSize>(3,2)</drawSize>
		</graphicData>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>150</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<socialPropernessMatters>true</socialPropernessMatters>
		<designationCategory>Joy</designationCategory>
		<statBases>
			<WorkToBuild>80000</WorkToBuild>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Mass>400</Mass>
			<JoyGainFactor>3</JoyGainFactor>
		</statBases>
		<pathCost>50</pathCost>
		<passability>Standable</passability>
		<size>(3,2)</size>
		<building>
			<spawnedConceptLearnOpportunity>TVForSickPeople</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>TVForSickPeople</boughtConceptLearnOpportunity>
			<watchBuildingStandDistanceRange>2~5</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>5</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<effectWatching>WatchingTelevision</effectWatching>
		</building>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>VFEC_DramaAndComedy</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>