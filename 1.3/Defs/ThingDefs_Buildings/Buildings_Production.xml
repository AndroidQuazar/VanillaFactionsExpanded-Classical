<?xml version="1.0" encoding="UTF-8"?>
<Defs>

   <ThingDef ParentName="BuildingBase">
      <defName>VFEC_MeatDryingRack</defName>
      <label>meat drying rack</label>
      <description>A solid wooden rack featuring a series of dangling metal hooks across a central beam meant to hang slabs of meat. Meat hung by it will very slowly air dry over time, allowing an indefinite form of preservation. The air drying process can be quickened by a warm environment.</description>
      <thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
      <researchPrerequisites>
         <li>VFEC_MeatDrying</li>
      </researchPrerequisites>
      <graphicData>
         <texPath>Things/Building/Production/MeatDryingRack/MeatDryingRack_a</texPath>
         <graphicClass>Graphic_Single</graphicClass>
         <drawSize>(1,1)</drawSize>
         <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
         </damageData>
      </graphicData>
      <castEdgeShadows>true</castEdgeShadows>
      <staticSunShadowHeight>0.20</staticSunShadowHeight>
      <costList>
         <WoodLog>80</WoodLog>
         <Steel>20</Steel>
      </costList>
      <altitudeLayer>Building</altitudeLayer>
      <fillPercent>0.5</fillPercent>
      <useHitPoints>True</useHitPoints>
      <tickerType>Rare</tickerType>
      <statBases>
         <WorkToBuild>2000</WorkToBuild>
         <MaxHitPoints>100</MaxHitPoints>
         <Flammability>1.0</Flammability>
         <Cleanliness>-15</Cleanliness>
      </statBases>
      <size>(1,1)</size>
      <designationCategory>Production</designationCategory>
      <passability>PassThroughOnly</passability>
      <pathCost>50</pathCost>
      <surfaceType>Item</surfaceType>
	  <rotatable>false</rotatable>
      <comps>
         <li Class="ItemProcessor.CompProperties_ItemProcessor">
            <buildingOnGraphic>Things/Building/Production/MeatDryingRack/MeatDryingRack_b</buildingOnGraphic>
			<buildingFinishedGraphic>Things/Building/Production/MeatDryingRack/MeatDryingRack_c</buildingFinishedGraphic>
            <numberOfInputs>1</numberOfInputs>
            <qualitySelector>false</qualitySelector>
            <isCategoryBuilding>true</isCategoryBuilding>
            <InsertFirstItemDesc>VanillaFactionsExpanded.DryingRack.InsertFirstItemDesc</InsertFirstItemDesc>
            <isSemiAutomaticMachine>true</isSemiAutomaticMachine>
			<resetSemiautomaticIcon>UI/Gizmos/MeatDryingRack_ResetRecipes</resetSemiautomaticIcon>
			<chooseIngredientsIcon>UI/Gizmos/MeatDryingRack_ChooseIngredient</chooseIngredientsIcon>
            <showProgressBar>true</showProgressBar>
            <bringIngredientsText>VanillaFactionsExpanded.DryingRack.bringIngredientsText</bringIngredientsText>
            <bringIngredientsDesc>VanillaFactionsExpanded.DryingRack.bringIngredientsDesc</bringIngredientsDesc>
            <bringIngredientsIcon>UI/Gizmos/MeatDryingRack_ChooseIngredient</bringIngredientsIcon>
            <cancelIngredientsText>VanillaFactionsExpanded.DryingRack.cancelIngredientsText</cancelIngredientsText>
            <cancelIngredientsDesc>VanillaFactionsExpanded.DryingRack.cancelIngredientsDesc</cancelIngredientsDesc>
            <cancelIngredientsIcon>UI/Gizmos/MeatDryingRack_Cancel</cancelIngredientsIcon>
            <noPowerDestroysProgress>false</noPowerDestroysProgress>
            <destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>
			<isTemperatureAcceleratingMachine>true</isTemperatureAcceleratingMachine>
			<maxAccelerationTemp>999</maxAccelerationTemp>
			<minAccelerationTemp>28</minAccelerationTemp>
			<accelerationFactor>0.7</accelerationFactor>
         </li>
      </comps>
      <placeWorkers>
         <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      </placeWorkers>
   </ThingDef>
   
   <ThingDef ParentName="BenchBase">
      <defName>VFEC_CraftingBench</defName>
      <label>crafting bench</label>
      <description>A simple bench stocked with equally simple tools meant to assist in the crafting of primitive goods and weapons.</description>
      <thingClass>Building_WorkTable</thingClass>
      <graphicData>
         <texPath>Things/Building/Production/CraftingBench/CraftingBench</texPath>
         <graphicClass>Graphic_Multi</graphicClass>
         <drawSize>(3.5,1.5)</drawSize>
         <shaderType>CutoutComplex</shaderType>
         <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
         </damageData>
      </graphicData>
      <castEdgeShadows>true</castEdgeShadows>
      <staticSunShadowHeight>0.20</staticSunShadowHeight>
      <costList>
         <WoodLog>50</WoodLog>
         <Steel>25</Steel>
      </costList>
      <altitudeLayer>Building</altitudeLayer>
      <fillPercent>0.5</fillPercent>
      <useHitPoints>True</useHitPoints>
      <statBases>
         <WorkToBuild>2000</WorkToBuild>
         <MaxHitPoints>180</MaxHitPoints>
         <Flammability>1.0</Flammability>
         <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
      </statBases>
      <size>(3,1)</size>
      <designationCategory>Production</designationCategory>
      <passability>PassThroughOnly</passability>
      <defaultPlacingRot>North</defaultPlacingRot>
      <pathCost>50</pathCost>
      <hasInteractionCell>True</hasInteractionCell>
      <interactionCellOffset>(0,0,-1)</interactionCellOffset>
      <surfaceType>Item</surfaceType>
      <inspectorTabs>
         <li>ITab_Bills</li>
      </inspectorTabs>
      <building>
         <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      </building>
      <comps>
         <li Class="CompProperties_AffectedByFacilities">
            <linkableFacilities>
               <li>ToolCabinet</li>
            </linkableFacilities>
         </li>
      </comps>
      <placeWorkers>
         <li>PlaceWorker_ShowFacilitiesConnections</li>
         <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      </placeWorkers>
      <researchPrerequisites>
         <li>VFEC_CraftingBench</li>
      </researchPrerequisites>
      <modExtensions>
         <li Class="RecipeInheritance.ThingDefExtension">
            <inheritRecipesFrom>
               <li>CraftingSpot</li>
            </inheritRecipesFrom>
         </li>
      </modExtensions>
   </ThingDef>
   
   <ThingDef ParentName="BuildingBase">
      <defName>VFEC_WoodFiredCrematorium</defName>
      <label>wood-fired crematorium</label>
      <description>A wood fired receptacle meant for disposal of unneeded junk or bodies.</description>
      <thingClass>Building_WorkTable_HeatPush</thingClass>
      <graphicData>
         <texPath>Things/Building/Production/WoodFiredCrematorium/WoodFiredCrematorium</texPath>
         <graphicClass>Graphic_Multi</graphicClass>
         <shaderType>CutoutComplex</shaderType>
         <drawSize>(5,4)</drawSize>
         <shadowData>
            <volume>(1.95,0.5,1.3)</volume>
         </shadowData>
         <damageData>
            <rect>(0.3,0.1,2.4,1.8)</rect>
         </damageData>
      </graphicData>
      <stuffCategories>
         <li>Stony</li>
      </stuffCategories>
      <costStuffCount>150</costStuffCount>
      <altitudeLayer>Building</altitudeLayer>
      <useHitPoints>True</useHitPoints>
      <statBases>
         <WorkToBuild>4500</WorkToBuild>
         <MaxHitPoints>300</MaxHitPoints>
         <Cleanliness>-20</Cleanliness>
         <Beauty>-10</Beauty>
      </statBases>
      <size>(3,2)</size>
      <designationCategory>Production</designationCategory>
      <fillPercent>1</fillPercent>
      <passability>Impassable</passability>
      <hasInteractionCell>True</hasInteractionCell>
      <interactionCellOffset>(0,0,-1)</interactionCellOffset>
      <interactionCellIcon>DiningChair</interactionCellIcon>
      <surfaceType>Item</surfaceType>
      <canOverlapZones>false</canOverlapZones>
      <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
      <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
      <inspectorTabs>
         <li>ITab_Bills</li>
      </inspectorTabs>
      <comps>
         <li Class="CompProperties_Refuelable">
            <fuelConsumptionRate>150.0</fuelConsumptionRate>
            <fuelCapacity>100.0</fuelCapacity>
            <fuelFilter>
               <thingDefs>
                  <li>WoodLog</li>
               </thingDefs>
            </fuelFilter>
            <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
            <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
         </li>
         <li Class="CompProperties_Glower">
            <glowRadius>6</glowRadius>
            <glowColor>(217,112,33,0)</glowColor>
         </li>
         <li Class="CompProperties_HeatPusher">
            <compClass>CompHeatPusherPowered</compClass>
            <heatPerSecond>12</heatPerSecond>
         </li>
      </comps>
      <building>
         <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
         <heatPerTickWhileWorking>0.32</heatPerTickWhileWorking>
         <forceShowRoomStats>true</forceShowRoomStats>
         <buildingTags>
            <li>Production</li>
         </buildingTags>
      </building>
      <placeWorkers>
         <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      </placeWorkers>
      <researchPrerequisites>
         <li>VFEC_WoodfiredCrematorium</li>
      </researchPrerequisites>
      <modExtensions>
         <li Class="RecipeInheritance.ThingDefExtension">
            <inheritRecipesFrom>
               <li>ElectricCrematorium</li>
            </inheritRecipesFrom>
         </li>
      </modExtensions>
   </ThingDef>
   
   <!-- concrete press -->
   <ThingDef ParentName="BuildingBase">
      <defName>VFEC_ConcretePress</defName>
      <label>cement press</label>
      <description>A very strong, open stone basin meant to cure and shape a mixture of clay, sand, and powdered stone known as cement into blocks.</description>
      <thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
      <graphicData>
         <texPath>Things/Building/Production/CementPress/CementPress</texPath>
         <graphicClass>Graphic_Multi</graphicClass>
         <shaderType>CutoutComplex</shaderType>
         <drawSize>(3,3)</drawSize>
      </graphicData>
      <altitudeLayer>Building</altitudeLayer>
      <statBases>
         <WorkToBuild>12000</WorkToBuild>
         <MaxHitPoints>300</MaxHitPoints>
         <Cleanliness>-20</Cleanliness>
         <Beauty>-8</Beauty>
      </statBases>
      <researchPrerequisites>
         <li>VFEC_CementMaking</li>
      </researchPrerequisites>
      <tickerType>Normal</tickerType>
      <size>(3,3)</size>
      <designationCategory>Production</designationCategory>
      <passability>PassThroughOnly</passability>
      <stuffCategories>
         <li>Stony</li>
      </stuffCategories>
      <defaultPlacingRot>South</defaultPlacingRot>
      <costStuffCount>150</costStuffCount>
      <building>
         <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
         <ai_chillDestination>false</ai_chillDestination>
         <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
         <buildingTags>
            <li>Production</li>
         </buildingTags>
      </building>
      <comps>
         <li Class="ItemProcessor.CompProperties_ItemProcessor">
            <buildingOnGraphic>Things/Building/Production/CementPress/CementPress</buildingOnGraphic>
            <numberOfInputs>1</numberOfInputs>
            <qualitySelector>false</qualitySelector>
            <isCategoryBuilding>true</isCategoryBuilding>
            <InsertFirstItemDesc>VanillaFactionsExpanded.ConcretePress.InsertFirstItemDesc</InsertFirstItemDesc>
            <isSemiAutomaticMachine>true</isSemiAutomaticMachine>
            <resetSemiautomaticIcon>UI/Gizmos/CementPress_ResetRecipes</resetSemiautomaticIcon>
            <chooseIngredientsIcon>UI/Gizmos/CementPress_ChooseIngredient</chooseIngredientsIcon>
            <showProgressBar>true</showProgressBar>
            <bringIngredientsText>VanillaFactionsExpanded.ConcretePress.bringIngredientsText</bringIngredientsText>
            <bringIngredientsDesc>VanillaFactionsExpanded.ConcretePress.bringIngredientsDesc</bringIngredientsDesc>
            <bringIngredientsIcon>UI/Gizmos/CementPress_ChooseIngredient</bringIngredientsIcon>
            <cancelIngredientsText>VanillaFactionsExpanded.ConcretePress.cancelIngredientsText</cancelIngredientsText>
            <cancelIngredientsDesc>VanillaFactionsExpanded.ConcretePress.cancelIngredientsDesc</cancelIngredientsDesc>
            <cancelIngredientsIcon>UI/Gizmos/CementPress_Cancel</cancelIngredientsIcon>
            <noPowerDestroysProgress>false</noPowerDestroysProgress>
            <destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>
         </li>
      </comps>
   </ThingDef>
   
   <ThingDef ParentName="BuildingBase">
      <defName>VFEC_TyrianFarm</defName>
      <label>tyrian farm</label>
      <description>A large wooden enclosure meant to be placed in shallow water and filled with cloth. A unique breed of snails found in many rimworlds are known to wash up and leave residue on the cloth contained within, dying it. Creates a small amount of royal fabric over time.</description>
      <thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
      <researchPrerequisites>
         <li>VFEC_TyrianProduction</li>
      </researchPrerequisites>
      <graphicData>
         <texPath>Things/Building/Production/TyrianFarm/TyrianFarmEmpty</texPath>
         <graphicClass>Graphic_Multi</graphicClass>
         <drawSize>(3,3)</drawSize>
         <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
         </damageData>
      </graphicData>
      <castEdgeShadows>true</castEdgeShadows>
      <staticSunShadowHeight>0.20</staticSunShadowHeight>
	  <tickerType>Rare</tickerType>
      <costList>
         <WoodLog>150</WoodLog>
      </costList>
      <altitudeLayer>Building</altitudeLayer>
      <fillPercent>0.5</fillPercent>
      <useHitPoints>True</useHitPoints>
      <statBases>
         <WorkToBuild>8000</WorkToBuild>
         <MaxHitPoints>180</MaxHitPoints>
         <Flammability>1.0</Flammability>
         <Cleanliness>-15</Cleanliness>
      </statBases>
      <size>(3,3)</size>
	  <interactionCellOffset>(0,0,2)</interactionCellOffset>
      <designationCategory>Production</designationCategory>
	  <rotatable>False</rotatable>
      <passability>PassThroughOnly</passability>
      <pathCost>80</pathCost>
      <surfaceType>Item</surfaceType>
	  <defaultPlacingRot>North</defaultPlacingRot>
	  <terrainAffordanceNeeded inherit="False">ShallowWater</terrainAffordanceNeeded>
      <comps>
         <li Class="ItemProcessor.CompProperties_ItemProcessor">
            <buildingOnGraphic>Things/Building/Production/TyrianFarm/TyrianFarmCloth</buildingOnGraphic>
			<buildingFinishedGraphic>Things/Building/Production/TyrianFarm/TyrianFarmRoyalFabric</buildingFinishedGraphic>
            <numberOfInputs>1</numberOfInputs>
            <qualitySelector>false</qualitySelector>
