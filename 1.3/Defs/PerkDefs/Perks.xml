<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <VFEC.Perks.PerkDef>
        <label>Amor Vincit Omnia</label>
        <defName>AmorVincitOmnia</defName>
        <description>Opinion of husband and wife is always locked at 100 and can never go down.</description>
        <texPath>UI/Perks/Perk_AmorVincitOmnia</texPath>
        <workerClass>VFEC.Perks.Workers.Amor</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Carpe Diem</label>
        <defName>CarpeDiem</defName>
        <description>Everyone gets +3 Mood buff</description>
        <texPath>UI/Perks/Perk_CarpeDiem</texPath>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Nil Desperandum</label>
        <defName>NilDesperandum</defName>
        <description>Mental break threshold decreased by 10%.</description>
        <texPath>UI/Perks/Perk_NilDesperandum</texPath>
        <workerClass>VFEC.Perks.Workers.PlayerOnly</workerClass>
        <statOffsets>
            <MentalBreakThreshold>-0.1</MentalBreakThreshold>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Panem Et Circenses</label>
        <defName>PanemEtCircenses</defName>
        <description>All positive mood thoughts last 20% longer.</description>
        <texPath>UI/Perks/Perk_PanemEtCircenses</texPath>
        <workerClass>VFEC.Perks.Workers.Panem</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Ars Longa, Vita Brevis</label>
        <defName>ArsLongaVitaBrevis</defName>
        <description>Beauty of all sculptures and art pieces is multiplied by x1.25.</description>
        <texPath>UI/Perks/Perk_ArsLongaVitaBrevis</texPath>
        <workerClass>VFEC.Perks.Workers.ArsLonga</workerClass>
        <statFactors>
            <Beauty>1.25</Beauty>
        </statFactors>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Exitus Acta Probat</label>
        <defName>ExitusActaProbat</defName>
        <description>All negative mood thoughts last 10% shorter.</description>
        <texPath>UI/Perks/Perk_ExitusActaProbat</texPath>
        <workerClass>VFEC.Perks.Workers.Exitus</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Alea Iacta Est</label>
        <defName>AleaIactaEst</defName>
        <description>Pain threshold increased by 10%.</description>
        <texPath>UI/Perks/Perk_AleaIactaEst</texPath>
        <workerClass>VFEC.Perks.Workers.PlayerOnly</workerClass>
        <statOffsets>
            <PainShockThreshold>0.1</PainShockThreshold>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Pecunia Nervus Belli</label>
        <defName>PecuniaNervusBelli</defName>
        <description>Weapons of any kind receive 5% price improvement.</description>
        <texPath>UI/Perks/Perk_PecuniaNervusBelli</texPath>
        <workerClass>VFEC.Perks.Workers.Pecunia</workerClass>
        <statOffsets>
            <SellPriceFactor>0.05</SellPriceFactor>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Si Vis Pacem, Para Bellum</label>
        <defName>SiVisPacemParaBellum</defName>
        <description>When colonist is drafted, mental breaks cannot happen.</description>
        <texPath>UI/Perks/Perk_SiVisPacemParaBellum</texPath>
        <workerClass>VFEC.Perks.Workers.Pacem</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Nos Morituri Te Salutant</label>
        <defName>NosMorituriTeSalutant</defName>
        <description>Mood thoughts for losing colonists, family members etc are halved.</description>
        <texPath>UI/Perks/Perk_NosMorituriTeSalutant</texPath>
        <workerClass>VFEC.Perks.Workers.Morituri</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Non Omnia Possumus Omnes</label>
        <defName>NonOmniaPossumusOmnes</defName>
        <description>Global skill learning speed increased by 5%.</description>
        <texPath>UI/Perks/Perk_NonOmniaPossumusOmnes</texPath>
        <workerClass>VFEC.Perks.Workers.PlayerOnly</workerClass>
        <statOffsets>
            <GlobalLearningFactor>0.05</GlobalLearningFactor>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Timendi Causa Est Nescire</label>
        <defName>TimendiCausaEstNescire</defName>
        <description>Research Speed increased by 5%.</description>
        <texPath>UI/Perks/Perk_TimendiCausaEstNescire</texPath>
        <workerClass>VFEC.Perks.Workers.PlayerOnly</workerClass>
        <statOffsets>
            <ResearchSpeed>0.05</ResearchSpeed>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Mens Sana In Corpore Sano</label>
        <defName>MensSanaInCorporeSano</defName>
        <description>Global work speed increased by 10% if in positive mood.</description>
        <texPath>UI/Perks/Perk_MensSanaInCorporeSano</texPath>
        <workerClass>VFEC.Perks.Workers.Corpore</workerClass>
        <statOffsets>
            <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Acta Non Verba</label>
        <defName>ActaNonVerba</defName>
        <description>Global work speed increased by 5%.</description>
        <texPath>UI/Perks/Perk_ActaNonVerba</texPath>
        <workerClass>VFEC.Perks.Workers.PlayerOnly</workerClass>
        <statOffsets>
            <WorkSpeedGlobal>0.05</WorkSpeedGlobal>
        </statOffsets>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Natura Non Constristatur</label>
        <defName>NaturaNonConstristatur</defName>
        <description>Thoughts on Environment (Hot and Cold) are halved (instead of -8, for example, it's -4).</description>
        <texPath>UI/Perks/Perk_NaturaNonConstristatur</texPath>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Tributum</label>
        <defName>Tributum</defName>
        <description>Gain annual silver donation equal to 5% of the player wealth. Prices at Central Republic vendors get halved.</description>
        <texPath>UI/Perks/Perk_Tributum</texPath>
        <needsSaving>true</needsSaving>
        <tickerType>Long</tickerType>
        <workerClass>VFEC.Perks.Workers.Tributum</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Auxilia</label>
        <defName>Auxilia</defName>
        <description>Every time a raid occurs, there is a 25% chance a reinforcement legion will show up to help. After that, the reinforcement legion leaves the map.</description>
        <texPath>UI/Perks/Perk_Auxilia</texPath>
        <workerClass>VFEC.Perks.Workers.Auxilia</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Profectus</label>
        <defName>Profectus</defName>
        <description>Every so often a random research project that's achievable by the player (Player meets prerequisites) gets automatically unlocked.</description>
        <texPath>UI/Perks/Perk_Profectus</texPath>
        <needsSaving>true</needsSaving>
        <tickerType>Long</tickerType>
        <workerClass>VFEC.Perks.Workers.Profectus</workerClass>
    </VFEC.Perks.PerkDef>
    <VFEC.Perks.PerkDef>
        <label>Veni, Vidi, Vici</label>
        <defName>VeniVidiVici</defName>
        <description>Any pawn from any of the three Republics will now be instantly recruitable.</description>
        <texPath>UI/Perks/Perk_VeniVidiVici</texPath>
        <workerClass>VFEC.Perks.Workers.VeniVidiVici</workerClass>
    </VFEC.Perks.PerkDef>
</Defs>