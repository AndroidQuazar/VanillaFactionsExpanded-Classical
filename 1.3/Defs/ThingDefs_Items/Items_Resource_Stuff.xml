<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>VFEC_Bronze</defName>
    <label>bronze</label>
    <description>A metallic alloy made from steel and trace amounts of copper found in stones. Can be used for crafting armor or furnishings when steel is in low supply.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Bronze</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MarketValue>1.5</MarketValue>
      <Mass>0.5</Mass>
      <StuffPower_Armor_Sharp>0.85</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.4</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.55</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>2.5</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.97</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.97</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <appearance>Metal</appearance>
      <commonality>0.15</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(132,80,52)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
