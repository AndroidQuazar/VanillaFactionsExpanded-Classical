<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>VFEC_MeleeWeapon_Spatha</defName>
    <label>spatha</label>
    <description>A weighty shortsword meant to deliver piercing attacks as well as occasional slashing swipes. Many scholars consider such a weapon to be a slightly less effective precursor to the longsword.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Spatha</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>ClassicalAdvanced</li>
    </weaponTags>
    <weaponClasses>
      <li>Neolithic</li>
    </weaponClasses>
    <costStuffCount>80</costStuffCount>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <relicChance>2</relicChance>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>VFEC_LegionaryArmaments</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <modExtensions>
	    <li Class="VFECore.ThingDefExtension">
            <usableWithShields>true</usableWithShields>
        </li>
    </modExtensions>
  </ThingDef>

