<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VFEC_Javelin</defName>
    <label>javelin</label>
    <description>A long-tipped throwing spear specifically designed to break armor and shield alike.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Javelin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>25</WoodLog>
	  <Steel>50</Steel>
    </costList>
    <relicChance>0</relicChance>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>ClassicalRangedJavelin</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
	  <researchPrerequisite>VFEC_LegionaryArmaments</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFEC_Javelin_Thrown</defaultProjectile>
        <warmupTime>4</warmupTime>
        <range>18.9</range>
        <soundCast>Interact_BeatFire</soundCast>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
         <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>9</power>
         <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <modExtensions>
	    <li Class="VFECore.ThingDefExtension">
            <usableWithShields>true</usableWithShields>
        </li>
    </modExtensions>
  </ThingDef>
  
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VFEC_Javelin_Thrown</defName>
    <label>javelin</label>
    <graphicData>
      <texPath>Things/Projectile/Pilum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>35</damageAmountBase>
      <stoppingPower>2.5</stoppingPower>
      <armorPenetrationBase>0.10</armorPenetrationBase>
      <speed>26</speed>
      <extraDamages>
        <li>
          <def>VFEC_ApparelDamage</def>
          <amount>20</amount>
        </li>
      </extraDamages>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseWeapon">
    <defName>VFEC_Weapon_Scorpion</defName>
    <label>scorpion</label>
    <description>A ballista-like turret capable of firing rapidly when set up and manned. Light enough to be used as a handheld weapon at the cost of firing speed, very effective against enemy infantry.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Scorpion</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>VFEC.Buildings.Scorpion</thingClass>
    <soundInteract>Bow_Large</soundInteract>
    <statBases>
      <Mass>5.3</Mass>
      <AccuracyTouch>0.74</AccuracyTouch>
      <AccuracyShort>0.82</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.3</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <burnableByRecipe>true</burnableByRecipe>
    <relicChance>0</relicChance>
    <tradeability>None</tradeability>
    <weaponTags>
      <li>ClassicalScorpion</li>
    </weaponTags>
    <costList>
      <WoodLog>70</WoodLog>
      <Steel>25</Steel>
    </costList>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
	  <li>Neolithic</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFEC_Arrow_Scorpion</defaultProjectile>
        <warmupTime>2.4</warmupTime>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>14</ticksBetweenBurstShots>
        <range>25.9</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <equippedStatOffsets>
      <MoveSpeed>-0.75</MoveSpeed>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VFEC_Arrow_Scorpion</defName>
    <label>scorpion arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>ArrowHighVelocity</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <stoppingPower>1</stoppingPower>
	  <armorPenetrationBase>0.05</armorPenetrationBase>
      <speed>56</speed>
    </projectile>
  </ThingDef>
  
</Defs>
