<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>VFEC_Plant_Poppy</defName>
    <label>poppy</label>
    <description>A tiny, crimson flower that can be harvested for opium, a strong pain killing drug.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
      <BeautyOutdoors>14</BeautyOutdoors>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Poppy</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer> 
    <selectable>true</selectable>
    <ingestible />
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>VFEC_Opium</harvestedThingDef>
      <harvestYield>2</harvestYield>
      <sowMinSkill>4</sowMinSkill>
      <!-- <sowWork>750</sowWork> -->
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>6.0</growDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

</Defs>
