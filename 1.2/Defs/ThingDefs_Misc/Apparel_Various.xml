<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--Civilian clothing-->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>VFEC_Toga</defName>
		<label>toga</label>
		<description>Description needed.</description>
		<recipeMaker>
			<researchPrerequisite>VFEC_Research_Togas</researchPrerequisite>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Toga/Toga</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<!--Same as T-shirt currently-->
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Toga/Toga</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel"/>
	</ThingDef>
	<!--Centurion armor-->
